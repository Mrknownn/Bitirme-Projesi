@model UpdateRecentPostDto
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Haber Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="RecentPostID" />
    <label>Haber Başlığı</label>
    <input type="text" asp-for="RecentPostTitle" class="form-control" />
    <br />
    <label>Haber Metini</label>
    <input type="textarea" asp-for="RecentPostTitle" class="form-control" />
    <br />
    <label>Haber Yazarı</label>
    <input type="text" asp-for="RecentPostDescription" class="form-control" />
    <br />
    <label>Haber Görseli</label>
    <input type="text" asp-for="RecentPostImageUrl" class="form-control" />
    <br />
    <label>Haber Yazılma Tarihi</label>
    <input type="datetime" asp-for="RecentPostTime" class="form-control" />
    <br />
    <button class="btn btn-success">Haberi Güncelle</button>
</form>