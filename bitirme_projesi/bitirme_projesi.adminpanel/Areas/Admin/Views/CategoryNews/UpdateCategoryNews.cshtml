@model UpdateCategoryNewsDto
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Haber Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="CategoryNewsID" />
    <label>Haber Başlığı</label>
    <input type="text" asp-for="CategoryNewsTitle" class="form-control" />
    <br />
    <label>Haber Metini</label>
    <input type="textarea" asp-for="CategoryNewsDescription" class="form-control" />
    <br />
    <label>Haber Yazarı</label>
    <input type="text" asp-for="CategoryNewsAuthor" class="form-control" />
    <br />
    <label>Haber Görseli</label>
    <input type="text" asp-for="CategoryNewsImageUrl" class="form-control" />
    <br />
    <label>Haber Yazılma Tarihi</label>
    <input type="datetime" asp-for="CategoryNewsTime" class="form-control" />
    <br />
    <button class="btn btn-success">Haberi Güncelle</button>
</form>