@model UpdateLatestArticlesDto
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Haber Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="LatestArticlesID" />
    <label>Haber Başlığı</label>
    <input type="text" asp-for="LatestArticlesTitle" class="form-control" />
    <br />
    <label>Haber Metini</label>
    <input type="textarea" asp-for="LatestArticlesDescription" class="form-control" />
    <br />
    <label>Haber Yazarı</label>
    <input type="text" asp-for="LatestArticlesAuthor" class="form-control" />
    <br />
    <label>Haber Görseli</label>
    <input type="text" asp-for="LatestArticlesImageUrl" class="form-control" />
    <br />
    <label>Haber Yazılma Tarihi</label>
    <input type="datetime" asp-for="LatestArticlesTime" class="form-control" />
    <br />
    <button class="btn btn-success">Haberi Güncelle</button>
</form>