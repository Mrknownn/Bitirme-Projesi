@model CreateTrendingNowDto
@{
    ViewData["Title"] = "CreateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<h1>Yeni Haber Girişi</h1>
<form method="post">
    <label>Haber Başlığı</label>
    <input type="text" asp-for="TrendingNowTitle" class="form-control" />
    <br />
    <label>Haber Metini</label>
    <input type="textarea" asp-for="TrendingNowDescription" class="form-control" />
    <br />
    <label>Haber Yazarı</label>
    <input type="text" asp-for="TrendingNowAuthor" class="form-control" />
    <br />
    <label>Haber Tarihi</label>
    <input type="datetime" asp-for="TrendingNowDate" class="form-control" />
    <br />
    <button class="btn btn-primary">Haberi Ekle</button>
</form>

