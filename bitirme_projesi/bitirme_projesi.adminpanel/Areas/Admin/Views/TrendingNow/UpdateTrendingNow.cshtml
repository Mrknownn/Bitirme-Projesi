@model UpdateTrendingNowDto
@{
    ViewData["Title"] = "UpdateTrendingNow";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Haber Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="TrendingNowID" />
    <label>Haber Başlığı</label>
    <input type="text" asp-for="TrendingNowTitle" class="form-control" />
    <br />
    <label>Haber Metini</label>
    <input type="textarea" asp-for="TrendingNowDescription" class="form-control" />
    <br />
    <label>Haber Yazarı</label>
    <input type="text" asp-for="TrendingNowAuthor" class="form-control" />
    <br />
    <label>Haber Yazılma Tarihi</label>
    <input type="text" asp-for="TrendingNowDate" class="form-control" />
    <br />
    <button class="btn btn-success">Haberi Güncelle</button>
</form>