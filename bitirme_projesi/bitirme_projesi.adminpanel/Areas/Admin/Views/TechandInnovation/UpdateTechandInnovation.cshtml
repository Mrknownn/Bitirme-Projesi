@model UpdateTechandInnovationDto
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Haber Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="TechandInnovationID" />
    <label>Haber Başlığı</label>
    <input type="text" asp-for="TechandInnovationTitle" class="form-control" />
    <br />
    <label>Haber Metini</label>
    <input type="textarea" asp-for="TechandInnovationDescription" class="form-control" />
    <br />
    <label>Haber Yazarı</label>
    <input type="text" asp-for="TechandInnovationAuthor" class="form-control" />
    <br />
    <label>Haber Görseli</label>
    <input type="text" asp-for="TechandInnovationImageUrl" class="form-control" />
    <br />
    <label>Haber Yazılma Tarihi</label>
    <input type="datetime" asp-for="TechandInnovationTime" class="form-control" />
    <br />
    <button class="btn btn-success">Haberi Güncelle</button>
</form>