@model UpdateVideoPartDto
@{
    ViewData["Title"] = "UpdateNews";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Video Düzenleme Sayfası</h1>
<form method="post">
    <input type="hidden" asp-for="videoPartID" />
    <label>Video Numarası</label>
    <input type="text" asp-for="videoDataNumber" class="form-control" />
    <br />
    <label>Video Başlığı</label>
    <input type="textarea" asp-for="videoPartName" class="form-control" />
    <br />
    <label>Video Yazarı</label>
    <input type="text" asp-for="videoAuthor" class="form-control" />
    <br />
    <label>Video Linki</label>
    <input type="text" asp-for="videoUrl" class="form-control" />
    <br />    
    <button class="btn btn-success">Video Güncelle</button>
</form>